#!/bin/bash

GIT_USER_NAME='Jared Holzman'
GIT_EMAIL='jared@holzman.io'

setup_git(){
  git config --global user.name "$GIT_USER_NAME"
  printf '%s \"%s\"\n' 'Set global git user name to' "$GIT_USER_NAME"
  git config --global user.email "$GIT_EMAIL"
  printf '%s \"%s\"\n' 'Set global git email to' "$GIT_EMAIL"
}

sudo pacman -S --needed git
setup_git

